<h1>Pledge to <%= @project.name %></h1>

<%= form_for [@project, @pledge] do |f| %>

  <div class="field">
    <%= f.label "How much do you pledge?" %>
    <%= f.number_field :amount, value: params[:amount] %>
  </div>
  <div class="actions"><%= f.submit %></div>
	
<% end %>

<%= link_to "Back", project_path(params[:project_id]) %>