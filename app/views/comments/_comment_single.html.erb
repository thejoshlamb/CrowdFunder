<% if comment.id.present? %>
  <div class="panel comment" data-commentid="<%= comment.id %>">
    <blockquote>
      <%= comment.content %>
      <cite>
        <%= comment.user.username unless comment.user == nil %>, <%= comment.created_at.to_date.to_s(:long) %>
        <% if comment.user === current_user %>
          - <%= link_to "Edit", edit_project_comment_path(@project.id,comment.id) %> - <%= link_to "Delete", project_comment_path(@project.id,comment.id), :remote => true, :method => :delete %>
        <% end %>
      </cite>
    </blockquote>
  </div>
<% end %>
