<h1><%= @project.name %></h1>
<p><%= @project.description %></p>
<p>$<%= @project.goal %></p>
<p><%= @project.deadline %></p>
<br>
<%= link_to "Edit this Project", edit_project_url %>
<br>
<%= link_to "Pledge to this Project!", new_project_pledge_path(params[:id]) %>
<br>
<p><%= link_to "Back", root_path %></p>

<% if current_user %>
  Make a comment:
  <%= render "comment_form" %>
<% else %>
  <p>Please sign in to make a comment.</p>
<% end %>

<p>Comments:</p>

<div class="review-list">
  <% @project.comments.reverse.each do |comment| %>
    <% if comment.id.present? %>

  <div class="comment">
    <p><%= comment.content %>

    <% if comment.user === current_user %>
      <em> | <%= link_to "Edit", edit_project_comment_path(@project.id,comment.id) %> | <%= link_to "Trash", project_comment_path(@project.id,comment.id), :method => :delete %></em><br>
      <% end %>

      <em> by <%= comment.user.username %></em>
      Added on: <%= comment.created_at %>
  </p></div>
<% end %>
  <% end %>
</div>