<div class = "large-9 columns">
  <!-- project info section -->

  <h1><%= @project.name %></h1>
  <p><%= @project.description %></p>
  <p>Project Pledge Progress: <%= @project.pledge_percent %>%</p>
  <p>Project Deadline: <%= @project.deadline %></p>

  <div class="progress large-9 secondary round">
  <span class="meter" style="width: <%= @project.pledge_percent %>%"></span>
  </div>
  

  <br>
  <% if @project.user === current_user %>
    <%= link_to "Edit this Project", edit_project_url %><br>

  <!-- pledges so far, visible to owner -->

    <p>Users that have pledged to your project:</p>

    <% @project.pledges.each do |pledge| %>
      <%= User.find(pledge.user_id).username %> | <%= link_to User.find(pledge.user_id).email, new_message_path({backer_id: pledge.user_id}) %> | $<%= pledge.amount %> 
    <% end %>

  <% end %>

 

  <!-- pledging section -->


  <% if current_user.pledges.any? { |pledge| pledge.project_id == @project.id } %>
    <p>You are currently pledged at the X<%=  %> level!</p>
  <% else %>
    <%= link_to "Pledge to this Project!", new_project_pledge_path(params[:id]) %>
  <% end %>
  <br>
  <p><%= link_to "Back", root_path %></p>

  <!-- comment section -->

  <% if current_user %>
    Make a comment:
    <%= render "comment_form" %>
  <% else %>
    <p>Please sign in to make a comment.</p>
  <% end %>

  <p>Comments:</p>

  <div class="review-list">
    <% @project.comments.reverse.each do |comment| %>
      <% if comment.id.present? %>

    <div class="comment">
      <p><%= comment.content %>

      <% if comment.user === current_user %>
        <em> | <%= link_to "Edit", edit_project_comment_path(@project.id,comment.id) %> | <%= link_to "Trash", project_comment_path(@project.id,comment.id), :method => :delete %></em><br>
        <% end %>

        <em> by <%= comment.user.username unless comment.user == nil %></em>
        Added on: <%= comment.created_at %>
    </p></div>
      <% end %>
  <% end %>
  </div>
</div>

<!-- right hand column -->

<div class = "large-3 columns">
 
 <!-- big numbers info box -->
  <div id = "project-info">
    <h1><%= @project.pledges.count %></h1>
    <p>current pledges<p>
    <h1>$<%= @project.pledge_total %></h1>
    <p>of $<%= @project.goal %> goal
    <h1> <%= distance_of_time_in_words_to_now(@project.deadline)%></h1>
    <p>until deadline<p>
  </div>

  <div>
    <a href="<%= new_project_pledge_path(params[:id]) %>" class="button radius" id = "donate-now">Back this Project</a>
  </div>

 <!-- donation tiers section -->

  <% @project.tiers.sort{ |a,b| a.amount <=> b.amount }.each do |tier| %>
    <div class = "panel" id = "tier-box">
      <h3>$<%= tier.amount %></h3>
      <%= tier.name %><br>
      <%= tier.description %><br>
      <%= link_to "Pledge this amount!", new_project_pledge_path(params[:id], {:amount => tier.amount}) %>
    </div>
  <% end %>
</div>